{% extends 'base.html.twig' %}

{% block title %}Plant index{% endblock %}

{% block body %}
    <h1>Plant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Level</th>
                <th>Is show</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            {% if plant.isShow == 1 %}
                <tr>
                    <td>{{ plant.id }}</td>
                    <td>{{ plant.name }}</td>
                    <td>{{ plant.description }}</td>
                    <td>{{ plant.level }}</td>            
                    <td>{{ plant.isShow }}</td>
                    <td>
                        <a href="{{ path('app_plant_show', {'id': plant.id}) }}">show</a>
                        <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">edit</a>
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('app_plant_new') }}">Create new</a>
{% endblock %}
