{% extends 'base.html.twig' %}

{% block title %}Plant{% endblock %}

{% block body %}
    <h1>Plant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plant.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ plant.level }}</td>
            </tr>
            <tr>
                <th>IsShow</th>
                <td>{{ plant.isShow ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description_after</th>
                <td>{{ plant.descriptionAfter }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stats') }}">back to list</a>

{% endblock %}
