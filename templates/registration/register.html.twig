{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous !{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/register-login.css') }}">
{% endblock %}

{% block body %}
    <main class="disp-f j-c-c al-c w-100pc h-100vh">
        <div class="disp-f bg-c-white card-s f-d-c-m al-c">
            <div class="disp-f al-c j-c-c f-d-c w-50pc h-100pc">
                <div class="disp-f al-c mg-b-100px">
                    <img src="{{ asset('assets/medias/icon.png') }}" alt="a child with flowers" width="50" height="50">
                    <h1>Cherche & Trouve</h1>
                </div>
                {{ form_start(registrationForm) }}
                    <div class="disp-f f-d-c w-250px gap-20px">
                        {{ form_row(registrationForm.email, {label: 'Email: '}) }}
                        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe:'}) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        <div class="disp-f gap-20px mg-t-20px">
                            <button class="b-log" type="submit" class="btn">S'inscrire</button>
                            <a class="b-reg" href="{{ path('app_login') }}">Se connecter</a>
                        </div>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
            <div class="w-50pc h-100pc disp-f j-c-c al-c">
                <img class="img-s" src="{{ asset('assets/medias/login-child.png') }}" alt="a child with flowers">
            </div>
    </main>
{% endblock %}
